@{
    Layout = null;
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#/" class="navbar-brand">Admin</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @*Hardcode this section to be your own custom nav bar using ui-sref*@
                <li>
                    <a ui-sref="userList" class="navbar-brand">User</a>
                </li>
                <li>
                    <a ui-sref="quizList" class="navbar-brand">Quiz</a>
                </li>
                <li>
                    <a ui-sref="questionList" class="navbar-brand">Question</a>
                </li>
                <li>
                    <a ui-sref="answerList" class="navbar-brand">Answer</a>
                </li>
                <li>
                    <a ui-sref="Default" class="navbar-brand">Take Quiz</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="divBelowNav container">
    <h2>Answer</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="Text" class="control-label col-md-2"> Text </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Text" id="Text" class="form-control" />
                    <div id="validation_for_Text"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="QuestionId" class="control-label col-md-2"> Question </label>
                <div class="col-md-10">
                    <select ng-model="data.QuestionId" id="QuestionId" class="form-control">
                        <option value="">-- choose Question --</option>
                        <option ng-repeat="question in QuestionId_options" value="{{question.Id}}">{{question.Text}}</option>
                    </select>
                    <div id="validation_for_QuestionId"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a ui-sref="answerList">Back to List</a>
    </div>
</div>